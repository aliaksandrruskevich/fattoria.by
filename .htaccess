RewriteRule ^новостройки/жк-дубравинский/?$ /новостройки/жк-дубравинский.html [L,R=301]
RewriteRule ^новостройки/жк-зеленая-гавань/?$ /новостройки/жк-зеленая-гавань.html [L,R=301]
RewriteRule ^новостройки/жк-комфорт-парк/?$ /новостройки/жк-комфорт-парк.html [L,R=301]
RewriteRule ^новостройки/жк-левада/?$ /новостройки/жк-левада.html [L,R=301]
RewriteRule ^новостройки/жк-маяк-минска/?$ /новостройки/жк-маяк-минска.html [L,R=301]
RewriteRule ^новостройки/жк-минск-мир/?$ /новостройки/жк-минск-мир.html [L,R=301]
