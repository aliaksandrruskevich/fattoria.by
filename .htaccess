Options -Indexes +FollowSymLinks
DirectoryIndex index.html index.php
AddDefaultCharset UTF-8

# Защита файлов
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|bak|backup)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

ErrorDocument 404 /404.html
ErrorDocument 503 /503.html

RewriteEngine On

# ПРАВИЛЬНЫЕ редиректы - без абсолютных путей
RewriteRule ^properties/?$ /properties.html [L,R=301]
RewriteRule ^new-buildings/?$ /new-buildings.html [L,R=301]
RewriteRule ^country-properties/?$ /country-properties.html [L,R=301]
RewriteRule ^commercial-properties/?$ /commercial-properties.html [L,R=301]
RewriteRule ^blog-stub/?$ /blog-stub.html [L,R=301]
RewriteRule ^information/?$ /information.html [L,R=301]
RewriteRule ^about/?$ /about.html [L,R=301]
RewriteRule ^staff/?$ /staff.html [L,R=301]
RewriteRule ^tariff-grid/?$ /tariff-grid.html [L,R=301]
RewriteRule ^mortgage-calculator/?$ /mortgage-calculator.html [L,R=301]
RewriteRule ^services-sellers/?$ /services-sellers.html [L,R=301]
RewriteRule ^services-buyers/?$ /services-buyers.html [L,R=301]

# Новостройки - с правильными путями
RewriteRule ^новостройки/жк-вершина/?$ /новостройки/жк-вершина.html [L,R=301]
